<h3><%= scrum.user.to_s %></h3>
<% if scrum.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <h4><%= l(:daily_scrum_what_i_did_yesterday) %></h4>
  <%= display_scrum_answer(scrum.what_did_i_do_yesterday) %>
  <h4><%= l(:daily_scrum_what_am_i_doing_today) %></h4>
  <%= display_scrum_answer(scrum.what_am_i_doing_today) %>
  <h4><%= l(:daily_scrum_whats_standing_in_my_way) %></h4>
  <%= display_scrum_answer(scrum.what_is_standing_in_my_way) %>
<% end %>